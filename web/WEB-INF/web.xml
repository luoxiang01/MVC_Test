<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>MVC_Test</display-name>
    <!-- AdminAddProductUiServlet的映射 -->
    <servlet>
        <servlet-name>AdminAddProductUiServlet</servlet-name>
        <servlet-class>web.AdminAddProductUiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminAddProductUiServlet</servlet-name>
        <url-pattern>/addProductCategory</url-pattern>
    </servlet-mapping>
    <!-- AdminEditProductUiServlet的映射 -->
    <servlet>
        <servlet-name>AdminEditProductUiServlet</servlet-name>
        <servlet-class>web.AdminEditProductUiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminEditProductUiServlet</servlet-name>
        <url-pattern>/editProductCategory</url-pattern>
    </servlet-mapping>
    <!--  -->
    <servlet>
        <servlet-name>AdminListProductUiServlet</servlet-name>
        <servlet-class>web.AdminListProductUiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminListProductUiServlet</servlet-name>
        <url-pattern>/productList</url-pattern>
    </servlet-mapping>
    <!-- AdminAddProductServlet的映射 -->
    <servlet>
        <servlet-name>AdminAddProductServlet</servlet-name>
        <servlet-class>web.AdminAddProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminAddProductServlet</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>
    <!-- AdminDeleteProductServlet的映射 -->
    <servlet>
        <servlet-name>AdminDeleteProductServlet</servlet-name>
        <servlet-class>web.AdminDeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDeleteProductServlet</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>
    <!--AdminEditProductServlet的映射-->
    <servlet>
        <servlet-name>AdminEditProductServlet</servlet-name>
        <servlet-class>web.AdminEditProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminEditProductServlet</servlet-name>
        <url-pattern>/editProduct</url-pattern>
    </servlet-mapping>

</web-app>